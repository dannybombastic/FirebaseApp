<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_gris_claro"
    android:clickable="true"

    android:padding="20dp"
    tools:context="com.example.danny.firebaseapp.FindByLocation.BuscarByLocation">

    <!-- TODO: Update blank fragment layout -->


        <android.support.design.widget.TextInputEditText
            android:id="@+id/busqueda_by_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/corner_white"
            android:ems="10"
            android:hint="@string/que_estas_buscando"
            android:inputType="text"
            android:padding="5dp"
            android:imeOptions="actionDone"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/boton_buscar_by"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:borderWidth="10dp"
            android:clickable="true"
            app:elevation="13dp"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_search_category_default"

            android:layout_alignBottom="@+id/busqueda_by_location"
            android:layout_alignParentEnd="true" />




</RelativeLayout>
